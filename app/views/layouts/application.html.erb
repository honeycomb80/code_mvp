<!DOCTYPE html>
<html>
<head>
  <title>CodeMvp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lora' rel='stylesheet' type='text/css'>
</head>
<body>

<div id="header">
<% if user_signed_in? %>
  <li class="header_links"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
<% else %>
  <li class="header_links"><%= link_to('Sign In', new_user_session_path)  %></li> 
  <li class="header_links"><%= link_to('Sign Up', new_user_registration_path)  %></li>

<% end %>


<h1 id="logo"><a href="/">code mvp</a></h1>
</div>

<%= yield %>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>



</body>
</html>
